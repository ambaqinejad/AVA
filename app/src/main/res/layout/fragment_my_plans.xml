<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="fragments.MyPlansFragment">
    <ImageView
        android:id="@+id/my_plans_image_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_plans"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/my_plans_text_view_fragment"
        android:text="برنامه های من"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1d7a01"
        android:layout_below="@+id/my_plans_image_fragment"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
